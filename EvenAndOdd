package even.and.odd;

// import text scanner
import java.util.Scanner;

public class EvenAndOdd 
{
    // main function
    public static void main(String[] args) 
    {
       // set variable
        int input;
       // print instructions to screen asking for input.
       // create new Scanner to pause, take user input and store as 'input'
        System.out.println("Please Enter a Number to check to Even or Odd:");
        Scanner textscan = new Scanner(System.in);
        input = textscan.nextInt();
        
        // Math, take user input, 
        // if divides by 2 with no reminder then is even
        // then prints to screen that it is even
        if (input % 2 == 0)
            System.out.println("You entered an EVEN number");
        // if input is not divide by 2 evening then it must be an Off
        // prints to screen for odd number
        else 
            System.out.println("You entered an ODD number");
        
       // print blank line, durning test, 
       // notice bug occssionaly printing on same line
        System.out.println("");
        
        // Math, if user input is equally divided by 3 and 5 then prints
        if ((input % 3 == 0) && (input % 5 == 0))
            System.out.print("Divisible by both Three and Five");
        // Math, if user input divded by 3 then prints out
        else if (input % 3 == 0) 
            System.out.println("Divisible by Three");
        // Math, if user input divided by 5 then prints out
        else if (input % 5 == 0) 
            System.out.println("Divisible by Five");
        // Math, if not divided by 3, 5 or both then prints out
        else
            System.out.println("Indivisible, with Liberty and Justice for All");
        
                
    }

}
    

